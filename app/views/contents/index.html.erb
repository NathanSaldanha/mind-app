<%=link_to "New Content", new_content_path %>
<h1>Contents#index</h1>
<%@contents.each do |contents| %>
  <%=link_to 'Show', content_path(contents) %>
  <%=link_to 'Edit', edit_content_path(contents) %>
  <%=link_to 'Destroy', content_path(contents), method: :delete, data: {confirm: 'Are you sure ?'}%> |
  <strong>Title:</strong> <%=contents.title %> |
  <strong>Description:</strong> <%=contents.description %> |
  <strong>Tags:</strong> <%=contents.tags.pluck(:name).join(', ') %>
  <br>
<% end %>